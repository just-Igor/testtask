<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/movie_button_bg_color_selected">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/movie_button_bg_color_selected" />
            <corners android:radius="@dimen/button_radius_large" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/movie_button_bg_color"
                android:startColor="@color/movie_button_bg_color"
                android:type="linear" />
            <corners android:radius="@dimen/button_radius_large" />
        </shape>
    </item>
</ripple>